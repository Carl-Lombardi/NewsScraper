<div>
    <h1 class="card z-depth-3 center-align" style="background-color: black; color: darkred; font-family: 'Montserrat', sans-serif;">Read the Latest from 'The Verge'</h1>
    <div class="row">
        <div class="col s3"></div>
        <h5 class="card z-depth-3 center-align col s6" style="background-color: black; color:darkred; font-family: 'Montserrat', sans-serif;">Click 'Scrape' to get the latest articles</h5>
    </div>
</div>
<div class="row" style="background-color: black">
    <div class="col s2" style="background-color: black"></div>
    <div class="col s8 left-align" style="background-color: black">
        {{#each article}}
        <div class="card-panel" style="background-color: black">
            <h4 style="background-color: black; color:darkred; font-family: 'Montserrat', sans-serif;">{{this.title}}</h4>
            <a href="/readArticle/{{this._id}}" class="waves-effect waves-light btn" id="btnSignUp" style="background-color: black; color:crimson; border-style:solid; border-width:2px; border-color :crimson">Read Article</a>

        </div>

        {{/each}}
    </div>
</div>